{
  "name": "apar-checklist",
  "version": "0.0.1",
  "description": "APAR Checklist",
  "main": "index.js",
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "expect-ct": "^0.2.0",
    "express": "~4.16.0",
    "express-enforces-ssl": "^1.1.0",
    "hbs": "^4.0.4",
    "helmet": "^3.18.0",
    "http-errors": "~1.6.2",
    "js-yaml": "3.13.1",
    "lodash": "^4.17.11",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/prompt-cli": "^8.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.3",
    "mocha": "^5.2.0"
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha tests/unit/*",
    "history": "bash ./scripts/history.sh",
    "lint": "./node_modules/.bin/eslint --color --fix config/* routes/* services/*",
    "start": "npm run start:dev",
    "start:dev": "export NODE_ENV=development; node bin/www",
    "start:prod": "export NODE_ENV=production; pm2 start ./bin/www --name='team_proj' --watch",
    "stop:prod": "pm2 stop team_proj",
    "profile": "bash ./scripts/profile.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.ibm.com/APAR-Checklist/server.git"
  },
  "keywords": [
    "apar",
    "checklist",
    "server",
    "ibm"
  ],
  "husky": {
    "pre-commit": "yarn lint;",
    "pre-push": "yarn test;",
    "commit-msg": "./node_modules/.bin/commitlint -E HUSKY_GIT_PARAMS"
  },
